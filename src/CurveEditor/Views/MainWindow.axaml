<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CurveEditor.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="CurveEditor.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding WindowTitle}"
        Width="1200" Height="800"
        MinWidth="800" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Window.Styles>
        <!-- Property Panel Header Style -->
        <Style Selector="TextBlock.PropertyHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="-8,8,-8,4"/>
        </Style>
        
        <!-- Property Label Style -->
        <Style Selector="TextBlock.PropertyLabel">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        
        <!-- Property Value Style -->
        <Style Selector="TextBlock.PropertyValue">
            <Setter Property="FontSize" Value="12"/>
        </Style>
        
        <!-- Property Row Style -->
        <Style Selector="Grid.PropertyRow">
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        
        <!-- List Box with buttons style -->
        <Style Selector="Border.SelectionPanel">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,4,0,8"/>
        </Style>
    </Window.Styles>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Command="{Binding NewMotorCommand}" InputGesture="Ctrl+N"/>
                <MenuItem Header="_Open..." Command="{Binding OpenFileCommand}" InputGesture="Ctrl+O"/>
                <Separator/>
                <MenuItem Header="_Save" Command="{Binding SaveCommand}" InputGesture="Ctrl+S"/>
                <MenuItem Header="Save _As..." Command="{Binding SaveAsCommand}" InputGesture="Ctrl+Shift+S"/>
                <MenuItem Header="Save Copy As..." Command="{Binding SaveCopyAsCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}" InputGesture="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" IsEnabled="False" InputGesture="Ctrl+Z"/>
                <MenuItem Header="_Redo" IsEnabled="False" InputGesture="Ctrl+Y"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Show _Grid Lines" IsEnabled="False"/>
                <MenuItem Header="Show _Hover Tooltip" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" IsEnabled="False"/>
            </MenuItem>
        </Menu>

        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom" 
                Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                Padding="8,4">
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="12"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Main Content Area -->
        <Grid ColumnDefinitions="200,*,320">
            
            <!-- Left: Directory Browser (placeholder) -->
            <Border Grid.Column="0" 
                    BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                    BorderThickness="0,0,1,0"
                    Padding="8">
                <StackPanel>
                    <TextBlock Text="Directory Browser" 
                               FontWeight="Bold" 
                               Margin="0,0,0,8"/>
                    <TextBlock Text="(Coming Soon)" 
                               Foreground="Gray"
                               FontStyle="Italic"/>
                    <Button Content="Open Folder..." 
                            Margin="0,8,0,0"
                            HorizontalAlignment="Stretch"
                            IsEnabled="False"/>
                </StackPanel>
            </Border>

            <!-- Center: Chart Area -->
            <Border Grid.Column="1" 
                    Margin="8"
                    BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <!-- Chart placeholder -->
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                IsVisible="{Binding CurrentMotor, Converter={x:Static ObjectConverters.IsNull}}">
                        <TextBlock Text="Motor Torque Curve Editor" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Create a new motor definition or open an existing file to get started."
                                   Margin="0,16,0,0"
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,24,0,0"
                                    Spacing="16">
                            <Button Content="New Motor" 
                                    Command="{Binding NewMotorCommand}"
                                    Padding="16,8"/>
                            <Button Content="Open File" 
                                    Command="{Binding OpenFileCommand}"
                                    Padding="16,8"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Motor info when loaded -->
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                IsVisible="{Binding CurrentMotor, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <TextBlock Text="{Binding CurrentMotor.MotorName}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentMotor.Manufacturer}" 
                                   FontSize="14" 
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                        <TextBlock Text="Chart visualization coming in Phase 2"
                                   Margin="0,32,0,0"
                                   Foreground="Gray"
                                   FontStyle="Italic"
                                   HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,24,0,0"
                                    Spacing="16">
                            <StackPanel>
                                <TextBlock Text="Max Speed" FontWeight="Bold"/>
                                <TextBlock Text="{Binding CurrentMotor.MaxSpeed, StringFormat=N0}"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Peak Torque" FontWeight="Bold"/>
                                <TextBlock Text="{Binding CurrentMotor.RatedPeakTorque, StringFormat=N1}"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Power" FontWeight="Bold"/>
                                <TextBlock Text="{Binding CurrentMotor.Power, StringFormat=N0}"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Drives" FontWeight="Bold"/>
                                <TextBlock Text="{Binding CurrentMotor.Drives.Count}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right: Properties Panel -->
            <Border Grid.Column="2" 
                    BorderBrush="{DynamicResource SystemControlBackgroundBaseMediumBrush}"
                    BorderThickness="1,0,0,0">
                <ScrollViewer>
                    <StackPanel Margin="8" 
                                IsVisible="{Binding CurrentMotor, Converter={x:Static ObjectConverters.IsNotNull}}">
                        
                        <TextBlock Text="Properties" 
                                   FontWeight="Bold" 
                                   FontSize="16"
                                   Margin="0,0,0,8"/>
                        
                        <!-- IDENTIFICATION SECTION -->
                        <TextBlock Text="Identification" Classes="PropertyHeader"/>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Motor Name" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMotor.MotorName}" Classes="PropertyValue"/>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Manufacturer" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMotor.Manufacturer}" Classes="PropertyValue"/>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Part Number" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMotor.PartNumber}" Classes="PropertyValue"/>
                        </Grid>
                        
                        <!-- PERFORMANCE SECTION -->
                        <TextBlock Text="Performance (Cut Sheet)" Classes="PropertyHeader"/>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Max Speed" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Classes="PropertyValue">
                                <Run Text="{Binding CurrentMotor.MaxSpeed, StringFormat=N0}"/>
                                <Run Text=" RPM"/>
                            </TextBlock>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Rated Speed" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Classes="PropertyValue">
                                <Run Text="{Binding CurrentMotor.RatedSpeed, StringFormat=N0}"/>
                                <Run Text=" RPM"/>
                            </TextBlock>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Peak Torque" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Classes="PropertyValue">
                                <Run Text="{Binding CurrentMotor.RatedPeakTorque, StringFormat=N2}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding CurrentMotor.Units.Torque}"/>
                            </TextBlock>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Cont. Torque" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Classes="PropertyValue">
                                <Run Text="{Binding CurrentMotor.RatedContinuousTorque, StringFormat=N2}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding CurrentMotor.Units.Torque}"/>
                            </TextBlock>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Power" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Classes="PropertyValue">
                                <Run Text="{Binding CurrentMotor.Power, StringFormat=N0}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding CurrentMotor.Units.Power}"/>
                            </TextBlock>
                        </Grid>
                        
                        <!-- PHYSICAL PROPERTIES SECTION -->
                        <TextBlock Text="Physical Properties" Classes="PropertyHeader"/>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Weight" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Classes="PropertyValue">
                                <Run Text="{Binding CurrentMotor.Weight, StringFormat=N2}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding CurrentMotor.Units.Weight}"/>
                            </TextBlock>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Rotor Inertia" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMotor.RotorInertia, StringFormat=N4}" Classes="PropertyValue"/>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Feedback PPR" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMotor.FeedbackPpr, StringFormat=N0}" Classes="PropertyValue"/>
                        </Grid>
                        
                        <!-- BRAKE SECTION -->
                        <TextBlock Text="Brake" Classes="PropertyHeader"/>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Has Brake" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMotor.HasBrake}" Classes="PropertyValue"/>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Brake Torque" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Classes="PropertyValue">
                                <Run Text="{Binding CurrentMotor.BrakeTorque, StringFormat=N2}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding CurrentMotor.Units.Torque}"/>
                            </TextBlock>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Brake Amperage" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Classes="PropertyValue">
                                <Run Text="{Binding CurrentMotor.BrakeAmperage, StringFormat=N2}"/>
                                <Run Text=" A"/>
                            </TextBlock>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Brake Voltage" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Classes="PropertyValue">
                                <Run Text="{Binding CurrentMotor.BrakeVoltage, StringFormat=N0}"/>
                                <Run Text=" V"/>
                            </TextBlock>
                        </Grid>
                        
                        <!-- UNITS SECTION -->
                        <TextBlock Text="Units" Classes="PropertyHeader"/>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Torque" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMotor.Units.Torque}" Classes="PropertyValue"/>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Speed" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMotor.Units.Speed}" Classes="PropertyValue"/>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Power" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMotor.Units.Power}" Classes="PropertyValue"/>
                        </Grid>
                        
                        <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                            <TextBlock Grid.Column="0" Text="Weight" Classes="PropertyLabel"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentMotor.Units.Weight}" Classes="PropertyValue"/>
                        </Grid>
                        
                        <!-- DRIVE SELECTION SECTION -->
                        <TextBlock Text="Drive Configuration" Classes="PropertyHeader"/>
                        
                        <Border Classes="SelectionPanel">
                            <Grid RowDefinitions="Auto,*">
                                <!-- List Box Header with +/- buttons -->
                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto" Margin="0,0,0,4">
                                    <TextBlock Grid.Column="0" Text="Drives" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <Button Grid.Column="1" Content="+" Width="24" Height="24" Padding="0"
                                            Command="{Binding AddDriveCommand}"
                                            ToolTip.Tip="Add Drive"/>
                                    <Button Grid.Column="2" Content="âˆ’" Width="24" Height="24" Padding="0" Margin="4,0,0,0"
                                            Command="{Binding RemoveDriveCommand}"
                                            ToolTip.Tip="Remove Drive"/>
                                </Grid>
                                
                                <!-- Drive ListBox -->
                                <ListBox Grid.Row="1" 
                                         ItemsSource="{Binding CurrentMotor.Drives}"
                                         SelectedItem="{Binding SelectedDrive}"
                                         MinHeight="60"
                                         MaxHeight="120">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding PartNumber, StringFormat=' ({0})'}" 
                                                           Foreground="Gray" FontSize="10" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                        
                        <!-- Selected Drive Properties -->
                        <StackPanel IsVisible="{Binding SelectedDrive, Converter={x:Static ObjectConverters.IsNotNull}}"
                                    Margin="0,0,0,8">
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Drive Name" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedDrive.Name}" Classes="PropertyValue"/>
                            </Grid>
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Part Number" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedDrive.PartNumber}" Classes="PropertyValue"/>
                            </Grid>
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Manufacturer" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedDrive.Manufacturer}" Classes="PropertyValue"/>
                            </Grid>
                        </StackPanel>
                        
                        <!-- VOLTAGE SELECTION SECTION -->
                        <TextBlock Text="Voltage Configuration" Classes="PropertyHeader"/>
                        
                        <Border Classes="SelectionPanel">
                            <Grid RowDefinitions="Auto,*">
                                <!-- List Box Header with +/- buttons -->
                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto" Margin="0,0,0,4">
                                    <TextBlock Grid.Column="0" Text="Voltages" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <Button Grid.Column="1" Content="+" Width="24" Height="24" Padding="0"
                                            Command="{Binding AddVoltageCommand}"
                                            ToolTip.Tip="Add Voltage"/>
                                    <Button Grid.Column="2" Content="âˆ’" Width="24" Height="24" Padding="0" Margin="4,0,0,0"
                                            Command="{Binding RemoveVoltageCommand}"
                                            ToolTip.Tip="Remove Voltage"/>
                                </Grid>
                                
                                <!-- Voltage ListBox -->
                                <ListBox Grid.Row="1" 
                                         ItemsSource="{Binding AvailableVoltages}"
                                         SelectedItem="{Binding SelectedVoltage}"
                                         MinHeight="60"
                                         MaxHeight="100">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Voltage, StringFormat={}{0}V}" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Power, StringFormat=' - {0}W'}" 
                                                           Foreground="Gray" FontSize="10" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                        
                        <!-- Selected Voltage Properties -->
                        <StackPanel IsVisible="{Binding SelectedVoltage, Converter={x:Static ObjectConverters.IsNotNull}}"
                                    Margin="0,0,0,8">
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Voltage" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Classes="PropertyValue">
                                    <Run Text="{Binding SelectedVoltage.Voltage, StringFormat=N0}"/>
                                    <Run Text=" V"/>
                                </TextBlock>
                            </Grid>
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Power" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Classes="PropertyValue">
                                    <Run Text="{Binding SelectedVoltage.Power, StringFormat=N0}"/>
                                    <Run Text=" W"/>
                                </TextBlock>
                            </Grid>
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Max Speed" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Classes="PropertyValue">
                                    <Run Text="{Binding SelectedVoltage.MaxSpeed, StringFormat=N0}"/>
                                    <Run Text=" RPM"/>
                                </TextBlock>
                            </Grid>
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Peak Torque" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Classes="PropertyValue">
                                    <Run Text="{Binding SelectedVoltage.RatedPeakTorque, StringFormat=N2}"/>
                                    <Run Text=" "/>
                                    <Run Text="{Binding CurrentMotor.Units.Torque}"/>
                                </TextBlock>
                            </Grid>
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Cont. Torque" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Classes="PropertyValue">
                                    <Run Text="{Binding SelectedVoltage.RatedContinuousTorque, StringFormat=N2}"/>
                                    <Run Text=" "/>
                                    <Run Text="{Binding CurrentMotor.Units.Torque}"/>
                                </TextBlock>
                            </Grid>
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Cont. Amps" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Classes="PropertyValue">
                                    <Run Text="{Binding SelectedVoltage.ContinuousAmperage, StringFormat=N1}"/>
                                    <Run Text=" A"/>
                                </TextBlock>
                            </Grid>
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Peak Amps" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Classes="PropertyValue">
                                    <Run Text="{Binding SelectedVoltage.PeakAmperage, StringFormat=N1}"/>
                                    <Run Text=" A"/>
                                </TextBlock>
                            </Grid>
                        </StackPanel>
                        
                        <!-- CURVE SERIES SECTION -->
                        <TextBlock Text="Curve Series" Classes="PropertyHeader"/>
                        
                        <Border Classes="SelectionPanel">
                            <Grid RowDefinitions="Auto,*">
                                <!-- List Box Header with +/- buttons -->
                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto" Margin="0,0,0,4">
                                    <TextBlock Grid.Column="0" Text="Series" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <Button Grid.Column="1" Content="+" Width="24" Height="24" Padding="0"
                                            Command="{Binding AddSeriesCommand}"
                                            ToolTip.Tip="Add Series"/>
                                    <Button Grid.Column="2" Content="âˆ’" Width="24" Height="24" Padding="0" Margin="4,0,0,0"
                                            Command="{Binding RemoveSeriesCommand}"
                                            ToolTip.Tip="Remove Series"/>
                                </Grid>
                                
                                <!-- Series ListBox with lock buttons -->
                                <ListBox Grid.Row="1" 
                                         ItemsSource="{Binding AvailableSeries}"
                                         SelectedItem="{Binding SelectedSeries}"
                                         MinHeight="60"
                                         MaxHeight="120">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid ColumnDefinitions="Auto,*">
                                                <Button Grid.Column="0" 
                                                        Width="24" Height="24" 
                                                        Padding="0" 
                                                        Margin="0,0,8,0"
                                                        Command="{Binding $parent[ListBox].((vm:MainWindowViewModel)DataContext).ToggleSeriesLockCommand}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip.Tip="Toggle Lock">
                                                    <Panel>
                                                        <TextBlock Text="ðŸ”’" FontSize="12" IsVisible="{Binding Locked}"/>
                                                        <TextBlock Text="ðŸ”“" FontSize="12" IsVisible="{Binding !Locked}"/>
                                                    </Panel>
                                                </Button>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Data.Count, StringFormat=' ({0} pts)'}" 
                                                               Foreground="Gray" FontSize="10" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                        
                        <!-- Selected Series Properties -->
                        <StackPanel IsVisible="{Binding SelectedSeries, Converter={x:Static ObjectConverters.IsNotNull}}"
                                    Margin="0,0,0,8">
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Series Name" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedSeries.Name}" Classes="PropertyValue"/>
                            </Grid>
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Data Points" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedSeries.Data.Count}" Classes="PropertyValue"/>
                            </Grid>
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Locked" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedSeries.Locked}" Classes="PropertyValue"/>
                            </Grid>
                            <Grid Classes="PropertyRow" ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" Text="Notes" Classes="PropertyLabel"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedSeries.Notes}" Classes="PropertyValue" TextWrapping="Wrap"/>
                            </Grid>
                        </StackPanel>
                        
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </DockPanel>

</Window>
